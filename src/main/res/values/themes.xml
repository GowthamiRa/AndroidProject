<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeDecorsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0284B3</item>
        <item name="colorPrimaryVariant">#00668B</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>

        <!-- Status bar stuff. -->
        <item name="actionModeStyle">@style/ActionModeTitleTextStyle</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LammaPay.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:titleTextAppearance">@style/title_style</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">-20dp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#fff</item>
        <item name="android:textSize">20sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->

        <item name="colorAccent">@color/teal_200</item>
        <item name="colorControlNormal">#e34b1c</item>
        <item name="colorControlActivated">#e34b1c</item>
    </style>

</resources>